<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<div id="gravatar"><%= gravatar_for @user, size: 80 %></div>
				<%= @user.name %><br>
				<%= @user.date_of_birth %><br>
				<%= check_gender @user %><br>
				<%= @user.que_quan %>
			</h1>
		</section>
	</aside>
</div>

